@{
    ViewData["Title"] = "Hash";
}

<div class="row">
    <div class="col-md-12">
        <h1>SHA256 Hash</h1>
	</div>
</div>
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" style="background-color:#D1F3B0;padding:10px;border-radius:5px;">
            <div class="form-group row">
                <div class="col-md-2">
                    <label class="control-label" for="data"><b>Dados</b></label>
                </div>
                <div class="col-md-10">
                    <textarea class="form-control" id="data" rows="6" onkeyup="ObterHash(this.value)"></textarea>
                </div>
			</div>
            <div class="form-group row">
                <div class="col-md-2">
                    <label class="control-label" for="hash"><b>Hash</b></label>
                </div>
                <div class="col-md-10">
                    <input class="form-control" id="hash" type="text" disabled>
                </div>
			</div>
        </form>
	</div>
</div>

